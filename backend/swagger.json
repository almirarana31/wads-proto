                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "name": { "type": "string" }
                    }
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "name": "High"
                  },
                  {
                    "id": 2,
